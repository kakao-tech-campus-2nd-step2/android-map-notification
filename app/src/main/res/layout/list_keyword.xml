<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="keyword"
            type="String" />

        <variable
            name="listener"
            type="campus.tech.kakao.map.viewmodel.OnKeywordItemClickListener" />
    </data>

    <RelativeLayout
        android:id="@+id/keyword_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/keyword_view_padding">

        <ImageView
            android:id="@+id/iv_remove_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:onClick="@{() -> listener.onKeywordItemDeleteClick(keyword)}"
            android:src="@drawable/ic_close" />

        <TextView
            android:id="@+id/tv_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyword_margin"
            android:layout_toEndOf="@id/iv_remove_icon"
            android:onClick="@{() -> listener.onKeywordItemClick(keyword)}"
            android:text="@{keyword}"
            android:textSize="@dimen/text_size_medium"
            tools:text="TextView" />

    </RelativeLayout>
</layout>
